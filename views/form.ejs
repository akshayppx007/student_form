<%- include('partials/header') %>

<%- include('partials/navbar') %>
    <section class="vh-100">
        <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <% forms.forEach(function(form) { %>
        <div class="col-xl-9" style="margin: 50px 0 50px;"">
       
          <div class="card" style="border-radius: 15px;">
            <div class="card-body" >
        
              <div class="row align-items-center pt-4 pb-3">
                <div class="col-md-3 ps-5">
  
                  <h6 class="mb-0">Permanent Address</h6>
  
                </div>
                <div class="col-md-9 pe-5">
  
                  <p><%= form.permanentAddress %></p>
  
                </div>
              </div>
  
              <hr class="mx-n3" />
  
              <div class="row align-items-center py-3">
                <div class="col-md-3 ps-5">
  
                  <h6 class="mb-0">Current Address</h6>
  
                </div>
                <div class="col-md-9 pe-5">
  
                 <p><%= form.currentAddress %></p>
  
                </div>
              </div>
    
  
              <hr class="mx-n3" />
  
              <div class="px-5 py-4">
                <a href="/api/find/<%= form._id %>">
                <button type="button" class="btn btn-primary btn-lg">Edit</button>
                </a>
              </div>
            </form>
  
            </div>
          </div>
       
        </div>
        <% }); %>
      </div>
    </div>
            
  </section>
  <%- include('partials/footer') %>